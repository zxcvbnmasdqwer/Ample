@model CourseManager.Models.CourseManagements
@using CourseManager.Models

@{
    ViewBag.Title = "Create";
     var classes = (List<Classes>)ViewBag.Classes;
      var teachers = (List<Teacher>)ViewBag.Teacher;
       var course = (List<Course>)ViewBag.course;
}
      }


<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>CourseManagements</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.ClassId)
        </div>
        <div class="editor-field">
            <select name="ClassId" class="form-contrl">
                @foreach (var cls in classes)
                { 
                <option value="@cls.Id">@cls.Name</option>
                }
            </select>
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CourseId)
        </div>
        <div class="editor-field">
             <select name="CourseId" class="form-contrl">
                @foreach (var courses in course)
                { 
                <option value="@courses.Id">@courses.Name</option>
                }
            </select>
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TeacherId)
        </div>
        <div class="editor-field">
             <select name="TeacherId" class="form-contrl">
                @foreach (var teacher in teachers)
                { 
                <option value="@teacher.Id">@teacher.Name</option>
                }
            </select>
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
